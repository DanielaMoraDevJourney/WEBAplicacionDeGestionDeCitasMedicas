<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEBAplicacionDeGestionDeCitasMedicas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEBAplicacionDeGestionDeCitasMedicas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <i class="fas fa-calendar-alt me-2"></i>Agendamiento de citas
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-list-ul me-1"></i>Menú
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="CitaMedicas" asp-action="Index"><i class="fas fa-calendar-check me-2"></i>Citas Médicas</a>
                                <a class="dropdown-item" asp-area="" asp-controller="HistorialMedicoes" asp-action="Index"><i class="fas fa-file-medical-alt me-2"></i>Historial Médico</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Medicos" asp-action="Index"><i class="fas fa-user-md me-2"></i>Médicos</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Pacientes" asp-action="Index"><i class="fas fa-user-injured me-2"></i>Pacientes</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Reportes" asp-action="Index"><i class="fas fa-chart-bar me-2"></i>Reportes</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Tratamientoes" asp-action="Index"><i class="fas fa-pills me-2"></i>Tratamientos</a>
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Buscar...">
                        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <span>&copy; 2024 - AgendamientoCitasMedicas</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white ms-2">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>